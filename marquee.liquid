<style>
  .marquee-container {
    overflow: hidden;
    background: #020030;
    padding: 20px 0;
    white-space: nowrap;
  }

  .marquee-content {
    display: flex;
    width: max-content;
    animation: scroll 20s linear infinite;
  }

  .marquee-track {
    display: flex;
    gap: 50px;
  }

  .marquee-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 0 30px;
    font-size: 1.2rem;
    color: #fff;
  }
  .marquee-item span{
    font-size: 18px;
  }

  .marquee-item img {
    width: 64px;
  }

  @media (max-width:768px){
    .marquee-item {
      padding: 5px 30px;
    }
    .marquee-container {
      padding: 6px 0;
    }
    .marquee-item span {
      font-size: 16px;
      letter-spacing: 0;
    }
    .marquee-item img {
      width: 48px;
    }
  }

  @media (max-width:520px){
    .marquee-item img {
        width: 36px;
    }
  }
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>


